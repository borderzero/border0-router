[Unit]
Description=Border0 WiFi Gateway Management Service
After=network.target

[Service]
Type=simple
StartLimitInterval=10
StartLimitBurst=10
ExecStart=/opt/border0/webui/venv/bin/gunicorn --workers 3 --bind 0.0.0.0:80 --factory gateway_admin.app:create_app

WorkingDirectory=/opt/border0/webui

Restart=always

RestartSec=10
EnvironmentFile=-/etc/sysconfig/border0-webui

[Install]
WantedBy=multi-user.target
